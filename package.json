{
  "name": "hifiles",
  "version": "1.0.8",
  "versionType": "beta",
  "description": "hifiles-chat with your docs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "release": "electron-builder -p \"onTagOrDraft\""
  },
  "repository": "https://github.com/yishak621/hifiles-desktop-app",
  "homepage": "https://github.com/yishak621/hifiles-desktop-app",
  "build": {
    "appId": "com.hifiles.www",
    "copyright": "copyright typing.ai",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "productName": "hifiles desktop app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "path/to/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": "nsis"
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "yishak621",
      "repo": "hifiles-desktop-app",
      "token": "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"
    }
  ],
  "keywords": [],
  "author": {
    "name": "Yishak Abrham Nibretu",
    "email": "yishakabrham621@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-log": "^5.1.7",
    "electron-updater": "^6.2.1"
  }
}
